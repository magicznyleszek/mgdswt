{# pagination template #}
<nav id="pagination" am-text="silver">

    <div id="pagination-prev">
        {% if pagination.prev %}
            <a href="{{ pagination.prev.link }}" am-button="naked spacelessH">
                <img am-icon src="{{ theme.link }}/img/icons/angle-left-circle-gray-o-big.png" alt="<">
                <span am-box="inline">nowsze posty</span>
            </a>
        {% endif %}
    </div>

    <div id="pagination-next">
        {% if pagination.next %}
            <a href="{{ pagination.next.link }}" am-button="naked spacelessH">
                <span am-box="inline">starsze posty</span>
                <img am-icon src="{{ theme.link }}/img/icons/angle-right-circle-gray-o-big.png" alt=">">
            </a>
        {% endif %}
    </div>

</nav>
